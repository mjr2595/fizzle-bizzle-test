@model FizzleBizzleTest.Models.FizzleBizzle

@{
    ViewBag.Title = "Fizzle Bizzle Test";
}

<div class="jumbotron fb-container">

    <div class="row">
        <div class="col-lg-12">
            <div class="page-header fb-header">
                <h1>Fizzle Bizzle Test</h1>
            </div>
        </div>
    </div>
  
    <div class="row">
        <div class="col-lg-12">
            <p class="lead">
                <b>FizzBuzz</b> generates an array of strings representing the consecutive sequence of integers
                from start to end. When the integer is a multiple of Fizz, the string "Fizz" is added instead. Likewise, for
                multiplesof Buzz, "Buzz" is added. For multiples of both Fizz and Buzz, "FizzBuzz" is added.
            </p>
            <div class="well example">
                <h2>For example:</h2>
                <p>
                    With Fizz = 3, Buzz = 5, start = 1, and end = 15; the array looks like:
                    ["1", "2", "Fizz", "4", "Buzz", "Fizz", "7", "8", ..., "14", "FizzBuzz"]
                </p>
            </div>
        </div>
    </div>
    
    @using (Html.BeginForm( "Index", "Home", FormMethod.Post, new { @class = "form-inline" }))
    {
        <div class="row">
            <div class="col-sm-12">
                <div class="row">
                    <div class="col-sm-12 col-md-6">
                        @Html.TextBoxFor(m => m.Start, new { @class="form-control",
                                                             @placehzolder="Start",
                                                             @Autocomplete= "off" })
                    </div>
                    <div class="col-sm-12 col-md-6">
                        @Html.TextBoxFor(m => m.End, new { @class="form-control", 
                                                           @placeholder="End",
                                                           @Autocomplete= "off" })
                    </div>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="row">
                    <div class="col-sm-12 col-md-6">
                        @Html.TextBoxFor(m => m.Fizz, new { @class="form-control",
                                                            @placeholder="Fizz",
                                                            @Autocomplete= "off" })
                    </div>
                    <div class="col-sm-12 col-md-6">
                       @Html.TextBoxFor(m => m.Buzz, new { @class="form-control",
                                                           @placeholder="Buzz",
                                                           @Autocomplete= "off" })
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-sm-12">
                <div class="row">
                    <div class="col-sm-12 col-md-6">
                        <span class="slider">
                            <input type="checkbox" class="form-control" id="enableBazz" name="enableBazz" onchange="toggleBazz()"/>
                            <label for="enableBazz"></label>
                        </span>
                        <span class="slider-label">Enable Bazz?</span>
                    </div>
                    <div class="col-sm-12 col-md-6">
                        @Html.TextBoxFor(m => m.Bazz, new { @class="form-control",
                                                            @placeholder="Bazz",
                                                            @Autocomplete= "off" })
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-sm-12">
                <div class="row">
                    <div class="col-sm-12 col-md-6">
                        <select type="select" class="form-control" name="predicate" id="Predicate" placeholder="Predicate">
                            <option>Greater Than</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
        
        <button id="generate" type="submit" class="btn btn-default btn-lg">Generate</button>
        
        <div class="row">
            <div class="col-sm-12">
                <p>@ViewBag.Output</p>
            </div>
        </div>
    }
    
</div>